<%- include('header.ejs') %>

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <h1 class="content-title">The ultimate series collection</h1>
        <div class="pure-g">
          <% for (article of articlesData) { %>
          <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
            <header>
              <img
                class="card-img pure-img"
                src="images/<%= article.img %>"
                alt="<%= article.img_alt %>"
              />
              <h2><%= article.title %></h2>
              <div class="card-meta">
                Category <a href="/<%= article.category %>"><%= article.category %></a>, find it on <a href="#"><%= article.author %></a>
              </div>
            </header>
            <% if (article.text.split(' ').length > 30)
            { %>
            <p><%= article.text.split(/\s+/).slice(0, 30).join(' ') + '...'%></p>

            <% } else { %> 

            <p><%= article.text %></p>

            <% } %>

            <a class="card-action pure-button" href="/article/<%= article.id %>"
              >Read More</a
            >
          </article>
          <% } %>
        </div>
      </main>
      <%- include('footer.ejs') %>