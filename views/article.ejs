<%- include('header.ejs') %>

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <div class="pure-g">
          <article class="post pure-u-1">
            <header>
              <h1><%= article.title %></h1>
              <div class="post-meta">
                Category <a href="/<%= article.category %>"><%= article.category %></a>, find it on <a href="#"><%= article.author %></a>
              </div>
            </header>
            <figure class="post-picture">
              <img
                class="pure-img"
                src="../images/<%= article.img %>"
                alt="<%= article.img_alt %>"
              />
              <figcaption class="post-picture-caption">
                <%= article.sub_title %>
              </figcaption>
            </figure>
            <div class="post-content">
              <p><%= article.text %></p>
            </div>
            <footer>
              <a class="pure-button" href="/">Go to Homepage</a>
            </footer>
          </article>
        </div>
      </main>
      <%- include('footer.ejs') %>